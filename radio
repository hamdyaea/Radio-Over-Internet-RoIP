import sys
from easygui import *
import vlc
import json

vol = 50


def coranradio():
    global vol, allradio
    player = vlc.MediaPlayer(allradio["coranradio"])
    player.play()
    image = (
        "/home/hamdy/Documents/Radio-Streaming-Gui-Original/pictures/coran-radio.jpg"
    )
    msg = ("You are listening Radio Quran") + str("\n\nVolume ") + str(vol) + str("%")
    choices = ["Exit", "Start menu", "Volume up", "Volume low"]
    reply = buttonbox(msg, image=image, choices=choices)
    if reply == "Start menu":
        player.stop()
        start()
    elif reply == "Volume up":
        if vol < 100:
            vol = vol + 10
            player.audio_set_volume(vol)
            player.stop()
            coranradio()
        else:
            player.stop()
            coranradio()
    elif reply == "Volume low":
        if vol > 0:
            vol = vol - 10
            player.audio_set_volume(vol)
            player.stop()
            coranradio()
        else:
            player.stop()
            coranradio()
    else:
        sys.exit(0)


