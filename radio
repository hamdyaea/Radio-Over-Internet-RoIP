def start():
    vol = 50
    image = "/home/hamdy/Documents/Radio-Streaming-Gui-Original/pictures/live.jpg"
    msg = "Click on the button to open a live web radio"
    choices = [
        "Radio Quran",
        "Mosaique FM",
        "ABC Piano",
        "NRJ Lounge",
        "FD lounge radio",
        "Energy 1058",
        "247 House FM",
    ]
    reply = buttonbox(msg, image=image, choices=choices)
    if reply == "Mosaique FM":
        radiomosaique()
    elif reply == "ABC Piano":
        abcpiano()
    elif reply == "NRJ Lounge":
        nrjlounge()
    elif reply == "FD lounge radio":
        fdlounge()
    elif reply == "Energy 1058":
        energy1058()
    elif reply == "247 Drum and Bass":
        dab247()
    elif reply == "247 House FM":
        house247()
    elif reply == "Radio Quran":
        coranradio()
    else:
        sys.exit(0)


def parser():
    global allradio
    with open("radio.json", "r") as r:
        allradio = json.load(r)


parser()
start()
